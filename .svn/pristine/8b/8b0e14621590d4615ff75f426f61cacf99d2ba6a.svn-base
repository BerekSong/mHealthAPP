<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView android:id="@+id/title_connected_devices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_connected_devices"
        android:textSize="20sp"
        android:paddingLeft="5dp"
    />
    <ListView android:id="@+id/connected_devices"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:stackFromBottom="true"
        android:layout_weight="1"
    />
    <Button android:id="@+id/button_scan" 
         	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:text="@string/scan_device"/>
    
    <Button android:id="@+id/button_add_mobile" 
         	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:text="@string/add_mobile"/>

</LinearLayout>